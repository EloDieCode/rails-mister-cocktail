<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description, hint: "Enter the quantity of ingredient your want" %>
        <%= f.button :submit, class: "my-button" %>
      <% end %>
    </div>
  </div>
</div>
