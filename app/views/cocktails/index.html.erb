<div class="container">
  <h2>Liste des cocktails</h2>
  <div class="card">
      <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 50, width: 50, crop: :thumb %>
      <% end %>
      <p><%= link_to cocktail.name, cocktail_path(cocktail)%></p>
    <% end %>
  </div>
</div>

